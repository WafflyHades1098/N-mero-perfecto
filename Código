#include <iostream>
using namespace std;

int main () {
  int a, b=0 ;
cout << " Inserta un valor de a:";
cin >> a;
  for (int i=1; i<=a/2; ++i) {
    if (a%i==0) {
      b=b+i;
  }
}
  if (b==a) {
    printf ("n\El nombre %d és perfecte", a);
} else {
    printf ("n\El nombre %d no és perfecte", a);
  }
}

